//diamond problem
//thanx

#include<iostream>
#include<stdio.h>
using namespace std;
int main()
{ int n,m;
  cout<<"enter the odd no of rows:";
  cin>>n;
  m=n;
  for(int i=n;i>=1;i--)
  {
  	 for(int j=1;j<i;j++)
  	 cout<<" ";
  	 for(int k=m;k>=i;k--)
  	 cout<<"* ";
  	 cout<<endl;
  }
    for(int i=1;i<n;i++)
  {
  	 for(int j=i;j>=1;j--)
  	 cout<<" ";
  	 for(int k=m-1;k>=i;k--)
  	 cout<<"* ";
  	 cout<<endl;
  }
  
  return 0;
}
